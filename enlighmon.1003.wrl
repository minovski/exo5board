# 顔パーツ
PROTO Eye_Baloon [
  field SFVec3f Translation 0 0 0
  field SFFloat Radius 0
]{
  Transform {
    translation IS Translation
    children [
      Shape {
        appearance Appearance { 
          material Material { diffuseColor 1 1 1 } 
          texture ImageTexture {
            url "./img/eye.png"
            repeatS FALSE
            repeatT FALSE
          }
        } 
        geometry Sphere { radius IS Radius } 
      } 
    ] 
  }
}
